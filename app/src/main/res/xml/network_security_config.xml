<?xml version="1.0" encoding="utf-8"?>
<network-security-config>
    <!-- Base configuration for all connections -->
    <base-config cleartextTrafficPermitted="false">
        <trust-anchors>
            <!-- Trust system CA certificates (for HTTPS) -->
            <certificates src="system" />
        </trust-anchors>
    </base-config>
    
    <!-- Debug-only configuration (allows cleartext for local testing) -->
    <debug-overrides>
        <trust-anchors>
            <!-- In debug mode, also trust user-installed CAs for testing -->
            <certificates src="system" />
            <certificates src="user" />
        </trust-anchors>
    </debug-overrides>
    
    <!-- Optional: Domain-specific configurations can be added here -->
    <!-- Example for allowing specific domains if needed in the future:
    <domain-config cleartextTrafficPermitted="true">
        <domain includeSubdomains="true">localhost</domain>
        <domain includeSubdomains="true">192.168.1.1</domain>
    </domain-config>
    -->
</network-security-config>
