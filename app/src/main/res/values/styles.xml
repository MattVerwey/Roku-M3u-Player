<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme -->
    <style name="Theme.Leanback" parent="Theme.Leanback.Browse">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:colorPrimary">#1A1A1A</item>
        <item name="android:colorPrimaryDark">#000000</item>
        <item name="android:colorAccent">#FFFFFF</item>
        <item name="android:windowBackground">@color/background</item>
        
        <!-- Force white text for headers/sidebar -->
        <item name="android:textColorPrimary">#FFFFFF</item>
        <item name="android:textColorSecondary">#FFFFFF</item>
        
        <!-- Leanback specific styling -->
        <item name="browseTitleTextStyle">@style/BrowseTitleTextStyle</item>
        <item name="headerStyle">@style/HeaderStyle</item>
        
        <!-- Override default header colors -->
        <item name="defaultBrandColor">#1A1A1A</item>
        <item name="defaultBrandColorDark">#000000</item>
        <item name="defaultSearchColor">#FFFFFF</item>
    </style>
    
    <style name="BrowseTitleTextStyle">
        <item name="android:textSize">40sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">6</item>
    </style>
    
    <style name="HeaderStyle" parent="Widget.Leanback.Header">
        <item name="android:textSize">28sp</item>
        <item name="android:textColor">#FFFFFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">3</item>
        <item name="android:shadowDy">3</item>
        <item name="android:shadowRadius">6</item>
        <item name="android:textAllCaps">false</item>
    </style>
    
    <style name="Theme.Leanback.Details" parent="Theme.Leanback.Details">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="Theme.Leanback.VerticalGrid" parent="Theme.Leanback.VerticalGrid">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>
</resources>
